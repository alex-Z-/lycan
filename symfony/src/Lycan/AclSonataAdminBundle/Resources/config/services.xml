<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="lycan_acl_sonata_admin_extension.acl.extension.class">Lycan\AclSonataAdminBundle\Admin\AclAdminExtension</parameter>
    </parameters>

    <services>
        <service id="lycan_acl_sonata_admin_extension.acl.extension" class="%lycan_acl_sonata_admin_extension.acl.extension.class%">
            <argument type="service" id="security.context" />
            <argument type="service" id="security.acl.dbal.connection" />
            <argument>%security.role_hierarchy.roles%</argument>
            <tag name="sonata.admin.extension" global="true" />
        </service>
    </services>

</container>
