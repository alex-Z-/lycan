<table class="table table-bordered">
    <thead>
    <tr>
        {% set cols = ['_delete', 'descriptiveName', 'provider', '_edit']  %}

        {% for field_name, nested_field in form.children|first.children %}
            {%  if field_name in cols %}

                {% if field_name == '_delete' %}
                    <th>{{ 'action_delete'|trans({}, 'SonataAdminBundle') }}</th>
                {% else %}
                    <th
                            {% if nested_field.vars['required'] %}
                                class="required"
                            {% endif %}
                            {% if (nested_field.vars['attr']['hidden'] is defined) and (nested_field.vars['attr']['hidden']) %}
                                style="display:none;"
                            {% endif %}
                    >
                        {{ nested_field.vars['sonata_admin'].admin.trans(
                        nested_field.vars.label,
                        {},
                        nested_field.vars.translation_domain
                        ) }}
                    </th>
                {% endif %}

            {% endif %}
        {% endfor %}
        <th>Edit</th>
    </tr>
    </thead>
    <tbody class="sonata-ba-tbody">
    {% for nested_group_field_name, nested_group_field in form.children %}
        <tr>
            {% for field_name, nested_field in nested_group_field.children %}
                {%  if field_name in cols %}
                    <td class="
                            sonata-ba-td-{{ id }}-{{ field_name  }}
                            control-group
                            {% if nested_field.vars.errors|length > 0 %} error{% endif %}
                            "
                            {% if (nested_field.vars['attr']['hidden'] is defined) and (nested_field.vars['attr']['hidden']) %}
                                style="display:none;"
                            {% endif %}
                    >
                        {% if sonata_admin.field_description.associationadmin.formfielddescriptions[field_name] is defined %}

                            {%  if field_name == '_edit' %}
                                {# <a href="{{ path('admin_app_listing_edit', {'id' : form.parent.vars.data.id, 'childId' : nested_field.vars.data })}}">Edit</a> #}
                            {% elseif field_name == 'provider' %}
                                {{ nested_field.vars.data}} / {{ nested_group_field.vars.data.providerListingId }}
                            {% else %}
                                {{ form_widget(nested_field) }}
                            {%  endif %}

                            {% set dummy = nested_group_field.setrendered %}
                        {% else %}
                            {% if field_name == '_delete' %}
                                {{ form_widget(nested_field, {'label_render': false}) }}
                            {% else %}
                                {{ form_widget(nested_field) }}
                            {% endif %}
                        {% endif %}
                        {% if nested_field.vars.errors|length > 0 %}
                            <div class="help-inline sonata-ba-field-error-messages">
                                {{ form_errors(nested_field) }}
                            </div>
                        {% endif %}
                    </td>
                {% endif %}
            {% endfor %}

            <td> <a href="{{ path('admin_app_listing_edit', {'id' :  nested_group_field.vars.data.id })}}">Edit</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
