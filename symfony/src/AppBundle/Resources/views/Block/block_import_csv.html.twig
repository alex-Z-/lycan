{% extends 'SonataBlockBundle:Block:block_base.html.twig' %}

{% block block %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">CSV Import</h3>
        </div>
    <div class="box-body">
        <form action="{{ path('import_csv') }}" method="post" enctype="multipart/form-data" >
            <table>
                <tbody>
                <tr>
                    <td><label style="margin-right:30px">Select Import Type: </label></td>
                    <td>

                            <div class="form-group">

                                <select  size="1" name="fileType">
                                    {% for oneCSV in allTypes %}
                                        <option value="{{ oneCSV.id }}">{{ oneCSV.title }}</option>
                                    {% endfor %}
                                </select>

                            </div>

                    </td>
                    <td>  <label for="file-upload" class="custom-file-upload" style=" border: 1px solid #bbb;    box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
                                                                                display: inline-block;
                                                                                padding: 5px 12px;
                                                                                cursor: pointer;float:right; position: relative; top: -5px; right: -10px;">
                            <i class="fa fa-cloud-upload"></i>
                        </label></td>
                </tr>
                <tr>
                    <td><label>&nbsp;</label></td>
                    <td>

                        <div class="form-group">


                            <input class="form-control-file" id="file-upload"  type="file" name="csvFile" />
                            <small id="fileHelp" class="form-text text-muted">Select CSV file to upload and insert to Lycan.</small>
                        </div>
                        <div class="form-group">
                            <input class="btn btn-success" type="submit" value="Upload" />
                        </div>


                    </td>
                </tr>

                </tbody>
            </table>
        </form>
        </div>
    </div>
{% endblock %}